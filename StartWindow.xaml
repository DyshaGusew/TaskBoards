<Window x:Class="TaskBoard.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskBoard"
        mc:Ignorable="d"
        Title="TaskBoard" Icon="/Other/ocr.png" WindowStyle="ThreeDBorderWindow" Width="1920" Height="1064" Left="-10" Top="0">
    <Grid x:Name="StartPlane" Background="#FF4AB4B4">
        <Button Content="Выйти" Padding="15 5" Margin="15" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Exit" />
        <StackPanel Width="900" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добро пожаловать!" Margin="0 0 0 55" FontSize="90" FontWeight="Bold" TextAlignment="Center" />
            <Button Content="Авторизироваться" Padding="0 20" Margin="0 0 0 25" FontSize="40" Click="Auth" />
            <Button Content="Зарегистрироваться" Padding="0 20"  FontSize="40" Click="Reg" />
        </StackPanel>
    </Grid>
</Window>
